//write a C program to finf 1+1/2!+1+1/3!+...+1/n!.

#include <stdio.h>

int main()
{
    int i,num,sum=0;
    printf("Input any number:\n");
    scanf("%d",&num);
    printf("1 + ");
    for(i=2;i<=num;i++);
    printf("1/%d",i);
    for(i=1;i<=num;i++)
       sum=sum+i;
     printf("1/%d",num);
     printf("\nSum=1/%d",sum+1/num);
    return 0;
}

    
